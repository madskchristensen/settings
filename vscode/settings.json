{
    /* Font */
    "terminal.integrated.fontFamily": "JetBrains Mono, Fira Code, monospace",
    "editor.fontFamily": "San Francisco, Consolas, 'Courier New', monospace",
    "debug.console.fontFamily": "JetBrains Mono, Fira Code, monospace",

    /* Warnings/errors in open file titles ^ and <--- navigator */
    "workbench.editor.decorations.colors": false, // disable error/warning colors on file title. Would like to just disable the warning color, but not possible.
    "workbench.editor.decorations.badges": true,
    "explorer.decorations.colors": false, // do the same for the explorer
    "explorer.decorations.badges": true,

    /* Hide vertical scroll and use minimap instead */
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,

    /* Minimap */
    "editor.minimap.size": "proportional",
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",

    "breadcrumbs.enabled": false,
    "editor.smoothScrolling": true,

    /* VS icons settings. Most important is to hide fodlers for less clutter */
    "vsicons.presets.hideFolders": true,
    "vsicons.presets.jsOfficial": true,
    "vsicons.presets.tsOfficial": true,
    "vsicons.presets.jsonOfficial": false,

    /* Blue text DARK: #4FC1FF */
    /* Blue text LIGHT: #9CDCFE */

    "workbench.colorCustomizations": {
        "[GitHub Dark]": {
            "statusBarItem.remoteForeground": "#ffffff",

            /* Error/warnings */
            "list.warningForeground": "#f8f476b8",
            "editorWarning.foreground": "#ffffa6ba", // warning squiggly lines
            "list.errorForeground": "#f87676",
            "editorError.foreground": "#f87676", // error squiggly lines

            /* FOREGROUND: Hover/Active/Selection/Inactive */
            "list.hoverForeground": "#4fc1ffcb",
            "tab.hoverForeground": "#4fc1ffcb",

            "tab.activeForeground": "#4fc1ffea",
            "list.activeSelectionForeground": "#4fc1ffea",
            "list.inactiveSelectionForeground": "#4fc1ffea",

            /* LIST Hover */
            "list.hoverBackground": "#4fc1ff00",

            /* TAB Active */
            "tab.activeBackground": "#24292E",
            "tab.activeBorderTop": "#4fc1ffea",

            /* BACKGROUND: ACTIVE/INACTIVE  */
            "list.activeSelectionBackground": "#24292E",
            "list.inactiveSelectionBackground": "#24292E",
            "list.inactiveFocusOutline": "#ff000000",
            "list.focusOutline": "#ff000000"
        }
    },
